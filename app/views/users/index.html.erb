<ul>
  <%= will_paginate @users %>
  
  <% @users.each do |user| %>
    <li>
    <div class="inline-block nudge-down-10">
    <%= link_to  gravatar_for user, size:32%></div>
    <%=user.name%>
    <%=user.ideas.count%></li>
  <%end%>
</ul>

<div class="mx-auto text-center my-4">
  <%= will_paginate @users %>
</div>